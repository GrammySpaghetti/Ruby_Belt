
<div class="container">


  <div class="col-lg-5 border border-dark m-1 d-inline-block">
    <h1>Register</h1>
    <form class="form-group" action="/users" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group row">
        <label for="first_name" class="col-lg-2 col-form-label">First Name: </label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="First Name" name='user[first_name]'>
        </div>
      </div>
      <div class="form-group row">
        <label for="last_name" class="col-lg-2 col-form-label">Last Name: </label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Last Name" name='user[last_name]'>
        </div>
      </div>
      <div class="form-group row">
        <label for="email" class="col-lg-2 col-form-label">Email: </label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Email" name='user[email]'>
        </div>
      </div>

      <div class="form-group row">
        <label for="Password" class="col-lg-2 col-form-label">Password: </label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Password" name='user[password]'>
        </div>
      </div>
      <div class="form-group row">
        <label for="password_confirmation " class="col-lg-2 col-form-label">Password Confirmation: </label>
        <div class="col-lg-10 align-top">
          <input type="text" class="form-control" placeholder="Password Confirmation" name='user[password_confirmation]'>
        </div>
      </div>
      <div class="text-right col-lg-12">
        <button class='btn btn-primary' type="submit" value="submit" name="button">Register</button>
      </div>
    </form>
  </div>

  <div class="col-lg-5 border border-dark m-1 d-inline-block align-top">
    <h1>Login</h1>
    <form class="form-group" action="/session" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group row">
        <label for="email" class="col-lg-2 col-form-label">Email: </label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Email" name='user[email]'>
        </div>
      </div>
      <div class="form-group row">
        <label for="password" class="col-lg-2 col-form-label">Password: </label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Password" name='user[password]'>
        </div>
      </div>

      <div class="text-right col-lg-12">
        <button class='btn btn-primary' type="submit" value="submit" name="button">Login</button>
      </div>
    </form>
  </div>
</div>
